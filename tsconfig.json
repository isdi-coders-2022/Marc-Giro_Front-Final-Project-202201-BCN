{
  "compilerOptions": {
    "rootDir": "./src/",
    "outDir": "./dist/",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "target": "ES2021",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "jest.config.js",
    "src/components/Navbar.test.js",
    "src/components/MoviesList/MoviesList.test.js",
    "src/redux/thunks/moviesThunk.test.js"
  ],
  "exclude": ["node_modules"]
}
